<Window x:Class="SearchQueryTool.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="820" Width="640"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <!-- Changed fixed width to Auto to accommodate wider logo (300x94) -->
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.RowSpan="5" CornerRadius="6" Background="{DynamicResource ControlBackgroundBrush}" Margin="0,0,10,0"/>
        <!-- Updated image size to actual 300x94 and removed unnecessary Stretch -->
        <Image Grid.Row="0" Width="300" Height="94" Margin="4"
               Source="images/SPPnP.png" Stretch="None"/>

        <StackPanel Grid.Column="2" Grid.Row="0">
            <TextBlock x:Name="Placeholder" />
			<TextBlock x:Name="ProductNameText" FontSize="18" FontWeight="Bold" />
            <TextBlock x:Name="VersionText" Margin="0,4,0,0" />
            <TextBlock x:Name="CompanyText" />
            <TextBlock x:Name="CopyrightText" />
        </StackPanel>

        <Separator Grid.Row="1" Grid.ColumnSpan="3" Margin="0,16,0,16"/>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="3">
            <TextBlock Text="Description:" FontWeight="Bold"/>
            <!-- Removed ScrollViewer to eliminate both scrollbars -->
            <TextBlock x:Name="DescriptionText" TextWrapping="Wrap" Margin="0,4,0,12"/>

            <TextBlock Text="Project / Documentation:" FontWeight="Bold"/>
            <TextBlock Margin="0,4,0,12">
                <Hyperlink x:Name="ProjectLink" RequestNavigate="ProjectLink_RequestNavigate"/>
            </TextBlock>

            <TextBlock Text="Contributors:" FontWeight="Bold"/>
            <TextBlock x:Name="ContributorsText" TextWrapping="Wrap" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Replaced collapsible Expander with always-visible heading + scrollable TextBox -->
        <Grid Grid.Row="3" Grid.ColumnSpan="3" Margin="0,8,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Package Licenses:" FontWeight="Bold"/>
            <TextBox Grid.Row="1" x:Name="LicensesTextBox" IsReadOnly="True" TextWrapping="NoWrap"
                     HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                     FontFamily="Consolas" FontSize="12" AcceptsReturn="True"/>
        </Grid>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="80" IsDefault="True" Click="Close_Click">Close</Button>
        </StackPanel>
    </Grid>
</Window>